conky.config = {
	background = true,
	use_xft = true,
	font = 'Metropolis Medium:size=9',
	xftalpha = 0.8,
	update_interval = 1,
	total_run_times = 0,
	own_window = true,
	own_window_type = 'normal',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	draw_blended = false,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,
	imlib_cache_size = 0,
	stippled_borders = 0,
	border_margin = '5',
	border_width = 1,
