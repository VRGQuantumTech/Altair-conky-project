${color1}${goto 210}${voffset 90}${execbar ~/.conky/Altair/conky-spotify/scripts/time_bar.sh}${color1}
${exec ~/.conky/Altair/conky-spotify/scripts/cover.sh}
# --- Show wallpaper and cover ---
